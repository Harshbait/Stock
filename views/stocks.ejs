<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Portfolio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>

<body>
    <h2>Your Portfolio</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Stock Name</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% if(portfolio.length > 0) { %>
      <% portfolio.forEach(item => { %>
        <tr>
          <td><%= item.stockId.name %></td>
          <td><%= item.quantity %></td>
          <td>₹<%= item.stockId.price %></td>
        </tr>
      <% }) %>
    <% } else { %>
      <tr>
        <td colspan="3" class="text-center">No stocks in your portfolio</td>
      </tr>
    <% } %>
  </tbody>
</table>

<a href="/broker" class="btn btn-danger">Sell Your Stocks</a>


<h2 class="mt-5">Market Stocks</h2>
<ul class="list-group">
  <% allStocks.forEach(stock => { %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <span>
        <strong><%= stock.name %></strong> - Price: ₹<%= stock.price %>
      </span>

      <form action="/order/request" method="POST" class="d-flex">
        <input type="hidden" name="stockId" value="<%= stock._id %>">
        <input type="number" name="quantity" class="form-control me-2" placeholder="Quantity" min="1" required>
        <button type="submit" class="btn btn-success">Buy</button>
      </form>
    </li>
  <% }) %>
</ul>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
        crossorigin="anonymous"></script>
</body>

</html>
